# ============================================================
# ONETOO – Universal Backend (Cloudflare Worker)
# ============================================================
# Copy to wrangler.toml and fill in your values.
# IMPORTANT: Do NOT commit secrets in wrangler.toml.
# ============================================================

name = "onetoo-universal"
main = "src/index.ts"
compatibility_date = "2026-01-11"

# ------------------------------------------------------------
# Cloudflare Account
# ------------------------------------------------------------
# Find this in Cloudflare Dashboard → Account → Overview
account_id = "PUT_YOUR_ACCOUNT_ID_HERE"

# ------------------------------------------------------------
# Deployment mode
# ------------------------------------------------------------
# Keep workers_dev enabled for diagnostics and workers.dev URL.
# Custom domain (search.onetoo.eu) can be attached via routes (below)
# or via Cloudflare Dashboard (Workers → Triggers).
workers_dev = true

# ------------------------------------------------------------
# (OPTIONAL) Route configuration
# ------------------------------------------------------------
# We intentionally keep routes disabled by default to avoid mistakes.
# If you want to bind routes here, uncomment:
#
# routes = [
#   { pattern = "search.onetoo.eu/*", zone_name = "onetoo.eu" }
# ]

# ------------------------------------------------------------
# Runtime environment variables
# ------------------------------------------------------------
[vars]
TRUST_ROOT_BASE = "https://www.onetoo.eu"
SEARCH_NOT_READY_MESSAGE = "search.onetoo.eu runtime is deployed, but search index is not enabled yet."
CORS_ALLOW_ORIGIN = "*"
# MAINTAINER_HEADER = "X-ONETOO-MAINTAINER"
