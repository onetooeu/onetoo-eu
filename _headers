# Cloudflare Pages _headers (canonical)

# Default: keep pages fresh-ish
/*
  Cache-Control: public, max-age=300

# Trust entrypoints (polish: 1h, removes Cache-Control duplication)
/.well-known/*
  Cache-Control: public, max-age=3600

/api/*
  Cache-Control: public, max-age=300

/status.json
  Cache-Control: public, max-age=60

# Dumps & feeds
/dumps/*
  Cache-Control: public, max-age=300

/incidents/feed.xml
  Cache-Control: public, max-age=300

/changelog/feed.xml
  Cache-Control: public, max-age=300

# Static assets: long cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/manifest.webmanifest
  Cache-Control: public, max-age=86400

# Public keys: explicit MIME + explicit cache
/control/keys/maintainers.pub
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=3600

/.well-known/minisign.pub
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=3600

/minisign.pub
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=3600

# Downloads: security + long cache for immutable artifacts
/downloads/*
  X-Content-Type-Options: nosniff

/downloads/*.zip
  Content-Type: application/zip
  Cache-Control: public, max-age=31536000, immutable

/downloads/*.minisig
  Content-Type: application/octet-stream
  Cache-Control: public, max-age=31536000, immutable

/downloads/*.sha256.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Holy Grail landing (polish)
/downloads/ai-search/holy-grail/
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=86400

/downloads/ai-search/holy-grail/index.html
  Cache-Control: public, max-age=86400

# Verification snippet (polish)
/.well-known/ai-search.verify.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=3600
