{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onetoo.eu/schemas/trust-state-v2.schema.json",
  "title": "Trust State v2",
  "type": "object",
  "required": [
    "version",
    "generated_at",
    "subject",
    "state",
    "signals"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "2.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "subject": {
      "type": "string",
      "format": "uri"
    },
    "state": {
      "type": "string",
      "enum": [
        "verified",
        "partial",
        "unverified",
        "blocked"
      ]
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}