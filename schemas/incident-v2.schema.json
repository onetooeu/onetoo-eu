{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onetoo.eu/schemas/incident-v2.schema.json",
  "title": "Incident Report v2",
  "type": "object",
  "required": [
    "version",
    "incident_id",
    "reported_at",
    "severity",
    "summary",
    "evidence",
    "status"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "2.0"
    },
    "incident_id": {
      "type": "string"
    },
    "reported_at": {
      "type": "string",
      "format": "date-time"
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "open",
        "investigating",
        "mitigated",
        "resolved",
        "false_positive"
      ]
    },
    "summary": {
      "type": "string"
    },
    "affected": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "evidence": {
      "type": "object",
      "properties": {
        "urls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "hashes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}