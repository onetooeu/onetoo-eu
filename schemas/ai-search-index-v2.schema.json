{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://onetoo.eu/schemas/ai-search-index-v2.schema.json",
  "title": "AI Search Index Manifest v2",
  "type": "object",
  "required": [
    "version",
    "generated_at",
    "lane",
    "accepted_set_ref",
    "sources",
    "shards",
    "signature",
    "merkle_root"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "2.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "lane": {
      "type": "string",
      "enum": [
        "stable",
        "sandbox"
      ]
    },
    "accepted_set_ref": {
      "type": "object",
      "required": [
        "url",
        "sha256",
        "sig_url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "sha256": {
          "type": "string"
        },
        "sig_url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "shards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "url",
          "sha256",
          "count"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "sha256": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      }
    },
    "merkle_root": {
      "type": "string"
    },
    "signature": {
      "type": "object",
      "required": [
        "alg",
        "value"
      ],
      "properties": {
        "alg": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}