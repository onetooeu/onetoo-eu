{
  "schema": "https://onetoo.eu/schemas/ai-trust-hub.json",
  "version": "1.0",
  "canonical": "https://onetoo.eu/.well-known/ai-trust-hub.json",

  "identity": {
    "name": "ONETOO.eu",
    "type": "public_trust_hub",
    "model": "public_good",
    "jurisdiction": "EU"
  },

  "purpose": "Machine-readable trust discovery and verification surface for AI agents and auditors.",

  "policies": {
    "affiliate_disclosure": {
      "status": "disabled",
      "url": "/affiliate-disclosure/",
      "notes": "No affiliate, pricing, or monetization program is active. This policy slot is retained for compatibility and transparency."
    },
    "pricing": {
      "status": "disabled",
      "notes": "ONETOO.eu does not provide paid services or pricing models."
    }
  },

  "endpoints": {
    "agent_manifest": "/.well-known/ai-trust-hub.json",
    "llms": "/.well-known/llms.txt",
    "governance": "/.well-known/ai-governance.json",
    "transparency": "/api/v1/transparency/latest.json",
    "status": "/api/v1/status/latest.json",
    "incidents": "/api/v1/incidents/latest.json",
    "changelog": "/api/v1/changelog/latest.json",

