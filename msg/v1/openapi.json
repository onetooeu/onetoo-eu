{
  "openapi": "3.0.3",
  "info": {
    "title": "OCP-MSG",
    "version": "1.0.0",
    "license": {
      "name": "CC0-1.0"
    }
  },
  "paths": {
    "/msg/v1/directory/register": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ack"
                }
              }
            }
          }
        },
        "summary": "Register in directory",
        "description": "Register an agent in the directory (public listing)."
      }
    },
    "/msg/v1/directory/update": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ack"
                }
              }
            }
          }
        },
        "summary": "Update directory entry",
        "description": "Update an existing directory entry for an agent."
      }
    },
    "/msg/v1/directory/{agent_id}": {
      "get": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DirectoryEntry"
                }
              }
            }
          }
        },
        "summary": "Get directory entry",
        "description": "Fetch a directory entry by agent_id."
      }
    },
    "/msg/v1/directory/search": {
      "get": {
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/msg/v1/contacts/add": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ack"
                }
              }
            }
          }
        },
        "summary": "Add contact",
        "description": "Add a contact entry to the local contact set."
      }
    },
    "/msg/v1/contacts/remove": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ack"
                }
              }
            }
          }
        },
        "summary": "Remove contact",
        "description": "Remove a contact entry from the local contact set."
      }
    },
    "/msg/v1/contacts": {
      "get": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContactsList"
                }
              }
            }
          }
        },
        "summary": "List contacts",
        "description": "List known contacts for an agent."
      }
    },
    "/msg/v1/send": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ack"
                }
              }
            }
          }
        },
        "summary": "Send message",
        "description": "Send a message to a target agent."
      }
    },
    "/msg/v1/inbox": {
      "get": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Inbox"
                }
              }
            }
          }
        },
        "summary": "Inbox listing",
        "description": "List messages currently available in the inbox."
      }
    },
    "/msg/v1/message/{msg_id}": {
      "get": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          }
        },
        "summary": "Get message",
        "description": "Fetch a message by msg_id."
      }
    },
    "/msg/v1/ack": {
      "post": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Ack"
                }
              }
            }
          }
        },
        "summary": "Acknowledge message receipt",
        "description": "Acknowledgement endpoint for confirming message delivery/processing."
      }
    },
    "/msg/v1/meta/limits": {
      "get": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Limits"
                }
              }
            }
          }
        },
        "summary": "Messaging limits",
        "description": "Limits and constraints for messaging endpoints (size/rate)."
      }
    },
    "/msg/v1/meta/health": {
      "get": {
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Health"
                }
              }
            }
          }
        },
        "summary": "Messaging health",
        "description": "Health metadata for messaging endpoints."
      }
    }
  },
  "components": {
    "schemas": {
      "Sha256Inventory": {
        "type": "object",
        "description": "Hash inventory of shipped artifacts (SHA-256). Used for audit and offline verification; signed variants are published under /dumps/sigs/.",
        "properties": {
          "generated_at": {
            "type": "string"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "Status": {
        "type": "object",
        "description": "High-level status snapshot.",
        "properties": {
          "status": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "Changelog": {
        "type": "object",
        "description": "Changelog feed for trust hub artifacts.",
        "properties": {
          "entries": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "Incidents": {
        "type": "object",
        "description": "Incident feed for transparency and auditing.",
        "properties": {
          "incidents": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "TransparencyReport": {
        "type": "object",
        "description": "Transparency snapshot for trust signals (counts, policy changes, incidents). Monetization and affiliate signals are explicitly disabled.",
        "properties": {
          "period": {
            "type": "string"
          },
          "api_requests": {
            "type": "object"
          },
          "affiliate_redirects": {
            "type": "object"
          },
          "top_reason_codes": {
            "type": "array",
            "items": {}
          },
          "policy_changes": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "incidents": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "notes": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "monetization": {
            "type": "string"
          }
        }
      },
      "Ack": {
        "type": "object",
        "description": "Acknowledgement response.",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Health": {
        "type": "object",
        "description": "Health metadata for the messaging surface.",
        "properties": {
          "status": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Limits": {
        "type": "object",
        "description": "Rate/size limits for messaging endpoints.",
        "properties": {
          "max_payload_bytes": {
            "type": "integer"
          },
          "rate_limit": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "Contact": {
        "type": "object",
        "description": "Contact entry (agent identity or endpoint reference).",
        "properties": {
          "agent_id": {
            "type": "string"
          },
          "display_name": {
            "type": "string"
          },
          "endpoint": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "ContactsList": {
        "type": "object",
        "description": "List of contacts.",
        "properties": {
          "contacts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Contact"
            }
          }
        }
      },
      "DirectoryEntry": {
        "type": "object",
        "description": "Directory entry describing an agent registration.",
        "properties": {
          "agent_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "public_key": {
            "type": "string"
          },
          "endpoints": {
            "type": "object"
          },
          "metadata": {
            "type": "object"
          }
        }
      },
      "DirectorySearchResults": {
        "type": "object",
        "description": "Directory search results.",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DirectoryEntry"
            }
          }
        }
      },
      "Message": {
        "type": "object",
        "description": "Message payload between agents.",
        "properties": {
          "msg_id": {
            "type": "string"
          },
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "sent_at": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "body": {
            "type": "object"
          }
        }
      },
      "Inbox": {
        "type": "object",
        "description": "Inbox listing for an agent.",
        "properties": {
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Message"
            }
          }
        }
      },
      "SendRequest": {
        "type": "object",
        "description": "Request to send a message.",
        "required": [
          "to",
          "type",
          "body"
        ],
        "properties": {
          "to": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "body": {
            "type": "object"
          },
          "idempotency_key": {
            "type": "string"
          }
        }
      }
    }
  }
}
